<%= content_for(:title) do %>
  BeameUp
<% end %>

  <div class="">
    <div class="flexbox">
      <div class="flex-left">
        <h1 class="text-center">Scooters</h1>
        <p><%= link_to "Back", root_path %></p>

          <div class="row">
          <% @scooters.each do |scooter| %>
            <div class="col-xs-4">
              <div class="card" style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= scooter.picture %>)' >
                <div class="card-category">Popular</div>
                  <div class="card-description">
                    <h2><%= scooter.name %></h2>
                    <p><%= scooter.description %></p>
                  </div>

                  <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
                  <%= link_to "Choose", scooter_path(scooter) %>
              </div>
            </div>
          <% end %>

          </div>

      </div>

      <div class="flex-right">
        <div class="map"></div>
      </div>

    </div>
  </div>
