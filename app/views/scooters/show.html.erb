<%= content_for(:title) do %>
  BeameUp - <%= @scooter.name %>
<% end %>

<div class="container no-side-margin">
  <div class="row margin-top-small">
    <div class="col-md-6 col-sm-12">
      <!-- left side cards section -->
      <div class="img-scooter" style='background-image: url(<%= @scooter.picture %>)'>
      </div>

      <div class="scooter-description">
        <h2><strong><%= @scooter.name %></strong></h2>

        <p><%= @scooter.description %></p>
        <%= @scooter.address %>
        <%= link_to "Rent it!", new_scooter_rent_path(@scooter), class: "btn btn-primary" %>
      </div>
    </div>
    <div class="col-md-6 col-sm-12">
      <!-- right side geocoder -->
      <div id="map" class="sticky" data-markers="<%= @markers.to_json %>"></div>
    </div>
  </div>
</div>


<p><%= link_to "Back", scooters_path %></p>
